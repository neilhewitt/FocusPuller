<Window x:Class="FocusPuller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FocusPuller" Height="400" Width="500"
        ResizeMode="CanMinimize"
        Icon="pack://application:,,,/focuspuller.ico"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Target Window Selection -->
        <GroupBox Grid.Row="0" Header="Target Window" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <ComboBox x:Name="WindowComboBox" 
                              SelectionChanged="WindowComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Exists}" Value="False">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <!-- Placeholder text overlay -->
                    <TextBlock x:Name="PlaceholderText" Text="Click to select target window"
                               Foreground="Gray"
                               Margin="8,0,0,0"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=WindowComboBox, Path=SelectedItem}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="WindowStatusLabel"
                               Grid.Column="1"
                               Text="{Binding ElementName=SelectedWindow, Path=StatusMessage}"
                               Foreground="Red"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Refocus Delay and Control - Side by Side -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Refocus Delay -->
            <GroupBox Grid.Column="0" Header="Refocus Delay" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Slider x:Name="DelaySlider" 
                            Grid.Row="0"
                            Minimum="100" 
                            Maximum="30000" 
                            Value="5000"
                            TickFrequency="100"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"
                            ValueChanged="DelaySlider_ValueChanged"/>
                    
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="DelayTextBox" 
                                 Grid.Column="0"
                                 Text="{Binding ElementName=DelaySlider, Path=Value, UpdateSourceTrigger=LostFocus}"
                                 LostFocus="DelayTextBox_LostFocus"
                                 KeyDown="DelayTextBox_KeyDown"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,5,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="ms"
                                   Margin="5,0,0,0"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Control -->
            <GroupBox Grid.Column="2" Header="Refocus" Padding="10">
                <Button x:Name="RefocusingButton" 
                        Content="Off"
                        Click="RefocusingButton_Click"
                        Background="Red"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
            </GroupBox>
        </Grid>

        <!-- Hide Mode -->
        <GroupBox Grid.Row="4" Header="Startup Behavior" Padding="10">
            <CheckBox x:Name="HideModeCheckBox" 
                      Content="Hide Mode (Start minimized with refocusing enabled)"
                      Checked="HideModeCheckBox_Changed"
                      Unchecked="HideModeCheckBox_Changed"/>
        </GroupBox>
    </Grid>
</Window>
